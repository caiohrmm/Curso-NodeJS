FROM node
WORKDIR /usr/src/app
COPY package.json .
RUN npm install
EXPOSE 3000
COPY . .
CMD ["npm", "start"]

# FROM -> IMAGEM
# WORKDIR -> DIRETORIO QUE A APLICACAO CRIA NO CONTAINER
# COPIAR MINHA PASTA PACKAGE.JSON PARA O CONTAINER
# CMD DA O COMANDO APOS FINALIZAR TUDO DO CONTAINER -> DAR NPM INSTALL PARA INSTALAR AS DEPENDENCIAS
# FAZER A COPIA DE TODOS OS ARQUIVOS PARA DENTRO DO CONTAINER
# DAR O COMANDO DE START DA APLICACAO.